@model DeleveryApp.Models.Client

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom CSS styles */
        body {
            background-color: #f8f9fa; /* Light gray background */
        }

        .container {
            margin-top: 30px;
        }

        .card {
            border: 1px solid #dee2e6; /* Light border */
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1); /* Shadow effect */
        }

        .card-header {
            background-color: #007bff; /* Blue header background */
            color: #fff; /* White text color */
            border-bottom: none; /* Remove border bottom */
            border-top-left-radius: 8px; /* Rounded corners */
            border-top-right-radius: 8px;
        }

        .card-body {
            padding: 20px;
        }

        .table {
            margin-top: 20px;
        }

            .table th {
                background-color: #f8f9fa; /* Neutral background color */
                color: #212529; /* Text color */
                border-top: none; /* Remove top border */
            }

        .btn-edit {
            margin-right: 10px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1 class="text-center mb-0">Client Details</h1>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th>Name</th>
                        <td>@Html.DisplayFor(model => model.Nom)</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>@Html.DisplayFor(model => model.Adresse)</td>
                    </tr>
                    <tr>
                        <th>Phone Number</th>
                        <td>@Html.DisplayFor(model => model.NumeroTelephone)</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@Html.DisplayFor(model => model.Email)</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <div class="container mt-3">
        <a class="btn btn-primary btn-edit" asp-action="Edit" asp-route-id="@Model?.IdClient">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>

</body>
</html>
