@model DeleveryApp.Models.Client

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - My Delivery App</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <style>
        body {
            background-color: #f8f9fa;
            color: #333;
            padding-top: 50px;
        }

        .container {
            background-color: #fff;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }

        .row {
            margin-bottom: 10px;
        }

        .col-sm-2 {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">Delete Client</h1>

        <h4 class="text-center">Are you sure you want to delete this?</h4>

        <div class="row">
            <div class="col-sm-2">Name:</div>
            <div class="col-sm-10">@Html.DisplayFor(model => model.Nom)</div>
        </div>
        <div class="row">
            <div class="col-sm-2">Address:</div>
            <div class="col-sm-10">@Html.DisplayFor(model => model.Adresse)</div>
        </div>
        <div class="row">
            <div class="col-sm-2">Phone Number:</div>
            <div class="col-sm-10">@Html.DisplayFor(model => model.NumeroTelephone)</div>
        </div>
        <div class="row">
            <div class="col-sm-2">Email:</div>
            <div class="col-sm-10">@Html.DisplayFor(model => model.Email)</div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdClient" />
            <div class="form-group text-center">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.5.4/umd/popper.min.js" integrity="sha384-SD0BfC5nYwV6H4kKD9hWjy4er/jTq5bKP1V8tSRbNiwHw5wuAR2+38xhKRvSKIzj" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-pzjw8f+Mm7QFi8aA4ZBEemI6Y/Y6TCFyY3yYyy3XpY2Kq0FfDip0k1hOeQiikyXr" crossorigin="anonymous"></script>
</body>
</html>
